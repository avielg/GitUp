[
  {
    "scopes" : ["comment"],
    "pattern" : "(\\/\\/.*)|(\\/\\*[\\s\\S]*?\\*\\/)"
  },
  {
    "scopes" : ["preprocessor"],
    "pattern" : "(&lt;\\?(php)?|\\?&gt;)"
  },
  {
    "scopes" : ["string"],
    "pattern" : "&quot;.*?&quot;"
  },
  {
    "scopes" : ["keyword", "language"],
    "pattern" : "\\b(echo|new|die|end|for(each)?|switch|if|case|require(_once)?|include(_once)?)(?=\\b)"
  },
  {
    "scopes" : ["constant"],
    "pattern" : "(true|false|null)|(\\b[A-Z0-9_]{2,}\\b)"
  },
  {
    "scopes" : ["numeric"],
    "pattern" : "\\b[_0-9\\.]*"
  },
  {
    "scopes" : ["operator"],
    "pattern" : "\\+|\\!|\\-|&lt;|&gt;|&|\\||\\*|\\="
  },
  {
    "scopes" : ["function", "call"],
    "pattern" : "((function)\\s(.*?)(?=\\())|((function)\\s(__.*?)(?=\\())|(self::|static::)|(\\b(namespace|use)\\s(.*?);)|(\\b(array(_key_exists|_merge|_keys|_shift)?|isset|count|empty|unset|printf|is_(array|string|numeric|object)|sprintf|each|date|time|substr|pos|str(len|pos|tolower|_replace|totime)?|ord|trim|in_array|implode|end|preg_match|explode|fmod|define|link|list|get_class|serialize|file|sort|mail|dir|idate|log|intval|header|chr|function_exists|dirname|preg_replace|file_exists)(?=\\())"
  },
  {
    "scopes" : ["url"],
    "pattern" : "((https?|mailto|ftp|file)://([-\\w\\.]+)+(:\\d+)?(/([\\w/_\\.]*(\\?\\S+)?)?)?)"
  },
  {
    "scopes" : ["attribute"],
    "pattern" : "(\\$)(\\w+)\\b"
  },
  {
    "scopes" : ["type"],
    "pattern" : "(([\\w\\\\]*?)(::)(?=\\b|\\$))|((\\(|,\\s?)([\\w\\\\]*?)(?=\\s\\$))|(\\\\b(abstract|final)?\\s?(class|interface|trait)\\s(\\w+)(\\sextends\\s)?([\\w\\\\]*)?(\\simplements\\s)?([\\w\\\\]*)?\\s?\\{?(\\n|\\}))|((instanceof)\\s([^\\$].*?)(\\)|;))"
  }
]
